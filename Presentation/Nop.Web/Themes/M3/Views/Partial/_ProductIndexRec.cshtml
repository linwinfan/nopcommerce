@model List<Maticsoft.Model.Shop.Products.ProductInfo> 
    <div class="promotionGoodsCont">
         @if (Model != null && Model.Count > 0)
         {
             foreach (var item in Model)
             {
                 <dl>
                     <dt><a href="@item.SeoUrl"><img width="160" height="160" alt="@item.ProductName" 
                             src="@Maticsoft.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T158X158_")"></a></dt>
                     <dd><a href="@item.SeoUrl">@item.ProductName</a></dd>
                     <dd class="red">￥@item.LowestSalePrice.ToString("F")</dd>
                 </dl>

             }
         }
            </div>
