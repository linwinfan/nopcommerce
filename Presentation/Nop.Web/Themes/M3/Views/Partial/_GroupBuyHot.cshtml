@model List<Maticsoft.Model.Shop.Products.ProductInfo> 
<div class="hotSell">
    <h6 style="margin: 0;">今日最热卖</h6>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
              <dl class="sellSub1">
                <dt style="text-align: center;"><a href="@item.SeoUrl"><img src="@Maticsoft.Web.Components.FileHelper.GeThumbImage(item.ThumbnailUrl1, "T199X260_")" style="max-width:240px ;max-height: 258px;" ></a></dt>
                <dd><a href="@item.SeoUrl">@item.ProductName</a></dd>
                <dd>
                    <p><strong>@item.LowestSalePrice.ToString("C")</strong></p>
                    <del>@(item.MarketPrice.HasValue?item.MarketPrice.Value.ToString("C"):"")</del>
                </dd>
            </dl>
            }

        }
	        </div>