@model List<Maticsoft.Model.Shop.Products.CategoryInfo>
 @if (Model != null && Model.Count > 0)
 {
<!--textarea1开始-->  

                     <!--hover显示内容开始-->
                     <!-- pop-list -->
                     <ul class="pop-list">
                          @for (int i = 0; i < Model.Count; i++)
                          {
                              <li>
                                  <a href="@(ViewBag.BasePath)product/@Model[i].CategoryId" title="@Model[i].Name">@Maticsoft.Common.StringPlus.SubString(Model[i].Name, 4, "...")</a>
                              </li>
                  @Html.Action("CategoryList", "Partial", new { Cid = Model[i].CategoryId, Top = -1, viewName = "_IndexThirdCate" })
                              
                          }
                        
                     </ul>
                     <!-- pop-list -->
                     
                     <!--hover显示内容结束-->

 }
                     <!--textarea1结束-->