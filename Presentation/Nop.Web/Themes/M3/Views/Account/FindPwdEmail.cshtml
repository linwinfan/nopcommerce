    $(function () {
        var acvar = 'special';
        if (acvar != 'index') {
            $('.mallleft').hover(function () {
                $('.j-menu').show();
            }, function () {
                $('.j-menu').hide();
            });
        }
    });
    $(function () {
        $('.ads_pictures>div').soChange({
            thumbObj: '.small_icons li',
            thumbNowClass: 'curr', //自定义导航对象当前class为curr
            changeTime: 5000//自定义切换时间为4000ms
        });

        $('.small_icons').hover(function () {
            clearInterval(timer);
        });

    });
    $(function () {
        $('.my-mro').hover(function () {
            $('.my-mropopup').stop(true, true).fadeIn();
        }, function () {
            $('.my-mropopup').stop(true, true).fadeOut();
        });
    });
    $(function () {
        $('.j-menu .items:even').addClass('backff');
        $('.j-menu .items:odd').addClass('backe6');
    });


    $(function () {
        $('.j-menu .items').hover(function () {


            $(this).find('.items-content').css({ height: $(this).find('.items-content').height() });

            $('.j-menu .items:even').addClass('backff');
            $('.j-menu .items:odd').addClass('backe6');
            $(this).addClass('back82').siblings().removeClass('back82');

            $(this).find('.items-content li').last().css({ border: 'none' });

            $('.j-menu .items .items-content').hide();
            $(this).find('.items-content').show();

        }, function () {
            $('.j-menu .items').find('.items-content').hide();
            $('.j-menu .items').removeClass('back82')
        });

        var acvar = 'special';
        if (acvar != 'index') {
            $("#cate").hide();
        } else {
            $("#cate").show();
        }
    });
</script>
