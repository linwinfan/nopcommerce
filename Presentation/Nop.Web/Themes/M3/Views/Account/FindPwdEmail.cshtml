@{
    ViewBag.Title = "找回密码";
    Layout = "/Areas/Shop/Themes/M3/Views/Shared/_BaseLayoutWithOutCate.cshtml";
}
<link rel="stylesheet" href="/Areas/Shop/Themes/M3/Content/styles/list.css" type="text/css" />
    <link rel="stylesheet" type="text/css" href="/Areas/Shop/Themes/M3/Content/styles/style.css"/>

<script type="text/javascript" src="/Areas/Shop/Themes/M3/Content/Scripts/jquery.soChange-min.js"></script>
<script src="/Areas/Shop/Themes/M3/Content/Scripts/jquery.lazyload.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#btnSend").click(function () {
            $.ajax({
                url: $Maticsoft.BasePath + "Account/SendEmail",
                type: 'post', dataType: 'text', timeout: 10000,
                data: { Action: "post", Email: '@ViewBag.Email', Type: 1 },
                success: function (resultData) {
                    if (resultData == "success") {
                        ShowSuccessTip("重新发送邮件成功！");
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    ShowFailTip("发送邮件失败：" + errorThrown);
                }
            });
        });
        $("#guide_2").mouseover(function () { $("#category").show(); }).mouseout(function () { $("#category").hide(); });

    });
</script>
<div class="contentWrap">
    <!--商品分类开始-->
    <div id="nav">
        <div class="area clearfix">
            <!--<div class="separate"></div>-->
            <div class="category-content" id="guide_2">
                <div style="width: 200px;height: 40px;">
                    <span class="all-goods"><a href="javascript:;">全部商品分类</a></span></div>
                <div class="category" id="category" style="display: none;">
                    @Html.Action("CategoryList", "Partial", new { Cid = 0, Top = 8, viewName = "_IndexCateAll" })
                </div>
            </div>
        </div>
    </div>
    <!--商品分类结束-->
</div>
<div class="aw m0u clearfix" style="width: 1200px; margin: 0 auto;">
    <div class="findpass_centent boxbg">
        <h3 style="font-size: 18px; font-weight: normal; padding-top: 18px;">
            发送邮件</h3>
        <div class="findpass_tip" style="margin-top: 5px;">
            <div class="successk" style="border: 1px solid #e4e4e4">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td width="1%" rowspan="5" align="center">
                                <img src="/Areas/Shop/Themes/M3/Content/images/success.png" width="180" height="133">
                            </td>
                            <td height="45" align="left">
                                <span class="successk_tip">已成功发送邮件，请登录邮箱进行处理</span>
                            </td>
                        </tr>
                        <tr>
                            <td height="35" colspan="2" align="left">
                                已发送邮件到 @ViewBag.Email ,请点击邮件中的“找回密码链接”来完成密码重置。
                            </td>
                        </tr>
                        <tr>
                            <td width="60%" height="60" colspan="2" align="left" valign="middle">
                                <a href="@ViewBag.EmailUrl" class="btn" style="color: #1859a5">登录邮箱</a> <a href="javascript:void(0)"
                                    id="btnSend" style="color: #1859a5" class="btn">重新发送</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
