@{
    Layout = "/Areas/Shop/Themes/M3/Views/Shared/_UserCenterLayout.cshtml";
}
@model Maticsoft.Model.Members.UsersExpModel    
<link rel="stylesheet" type="text/css" href="/Areas/Shop/Themes/M3/Content/styles/msg,btn,form,reg-base,reg.css?v=12022713" />    
<style type="text/css">
    select {
    width: 80px;
}
</style>
<script src="/Areas/Shop/Themes/M3/Content/Scripts/DataPicker4CN.js" type="text/javascript"></script>     
 <!--表单验证开始-->
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery/maticsoft.jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Areas/Shop/Themes/M3/Content/Scripts/updateuserinfo.js")"></script>
    <!--表单验证结束-->
    <link href="@Url.Content("~/Scripts/jqueryui/jquery-ui-1.8.19.custom.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jqueryui/jquery-ui-1.8.19.custom.min.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            $("[id$='Birthday']").datepicker({ dateFormat: "yy-mm-dd", yearRange: ("1900:" + new Date().getFullYear()), maxDate: new Date() });

            $.datepicker.setDefaults($.datepicker.regional['zh-CN']);
            var constellation = $("#hfConstellation").val();
            var personalstatus = $("#hfPersonalStatus").val();
            var sex = $("#hfSex").val();
            if (sex == "1") {
                $("#radman").attr("checked", true);
                $("#radwoman").attr("checked", false);
            }
            if (sex == "0") {
                $("#radman").attr("checked", false);
                $("#radwoman").attr("checked", true);
            }

            if ($("#radman").click(function () {
                $("#radwoman").attr("checked", false);
            }));

            if ($("#radwoman").click(function () {
                $("#radman").attr("checked", false);
            }));
            $("#dropConstellation").val(constellation);

            $("#dropPersonalStatus").val(personalstatus);
        });
    </script>     
   
<input type="hidden" id="currentpage" value="personnal"/>

<div class="col-main">
    <!-- 用户信息 E -->
         <div class="user_dingdantitle">个人资料</div>
                    <div class="J_tab_panel">
                        @if (null != Model)
                        {
                            <input id="hfConstellation" type="hidden" value="@Model.Constellation"  />
                            <input id="hfPersonalStatus" type="hidden" value="@Model.PersonalStatus"  />
                            <input id="hfSex" type="hidden" value="@Model.Sex"  />
                            <div class="material_con">
        
                                <div class="f-box" style="margin-top: 20px;">
                                    <label class="f-label">
                                        昵称：</label>
                                    <div class="f-input">
                                        <input type="text" value="@Model.NickName" maxlength="40" id="txtNickName" name="txtNickName" class="f-txt-b f-txt">    
                                    </div>
                                    <div class="f-msg">
                                        <div id="nciknameTip">
                                     
                                        </div>
                                    </div>
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        性别：</label>
                                    <div class="f-input" style="margin-top: 5px;">
                                        <input type="radio" name="radman" value="1" id="radman" class="dan" /><label>男</label>
                                        <input type="radio" name="radwoman" value="0" id="radwoman" class="dan" /><label>女</label>
                                    </div>
                                    <div class="f-msg">
                                        <div id="sexTip">
                                     
                                        </div>
                                    </div>
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        邮箱：</label>
                                    <div class="f-input">
                                        <input id="txtEmail" name="txtEmail" type="text" value="@Model.Email" maxlength="40"   class="f-txt-b f-txt">    
                                    </div>
                                    <div class="f-msg">
                                        <div id="emailTip">
                                     
                                        </div>
                                    </div>
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        手机号码：</label>
                                    <div class="f-input">
                                        <input id="txtPhone" name="txtPhone" type="text" value="@Model.Phone" maxlength="40"   class="f-txt-b f-txt">    
                                    </div>
                                    <div class="f-msg">
                                        <div id="phoneTip">
                                     
                                        </div>
                                    </div>
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        固定电话：</label>
                                    <div class="f-input">
                                        <input id="txtTelPhone" name="txtTelPhone" type="text" value="@Model.TelPhone" maxlength="40"   class="f-txt-b f-txt">    
                                    </div>
                                    <div class="f-msg">
                                        <div id="telphoneTip">
                                     
                                        </div>
                                    </div>
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        所在地：</label>
                                    <div class="f-input" id="divaddress">
                                        <script src="/Scripts/jquery/jquery.guid.js" type="text/javascript"></script>
                                        <input type="hidden" id="hfSelectedNode" value="@Model.RegionId" />
                                        <script src="/Scripts/jquery/maticsoft.selectregion.js" handle="/RegionHandle.aspx" isnull="true" type="text/javascript"></script>
                                    </div>
                                    <div class="f-msg">
                                        <div id="addressTip">
                                     
                                        </div>
                                    </div>
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        生日：</label>
                                    <div class="f-input">
                                        @if (Model.Birthday.HasValue)
                                        {
                                            <input id="txtBirthday" name="txtBirthday" type="text" value="@Model.Birthday.Value.ToString("yyyy-MM-dd")"     maxlength="40"   class="f-txt-b f-txt"/>
                                        }
                                        else
                                        {
                                            <input id="txtBirthday" name="txtBirthday" type="text"  maxlength="40"   class="f-txt-b f-txt"/>
                                        }
                                    </div>
                                    <div class="f-msg">
                                        <div id="birthdayTip">
                                     
                                        </div>
                                    </div>
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        星座：</label>
                                    <div class="f-input">
                                        <select name="dropConstellation" id="dropConstellation" class="f-txt-b f-txt" style="height: 28px;width:80px">
                                            <option value="0">请选择</option>
                                            <option value="1">水瓶座</option>
                                            <option value="2">双鱼座</option>
                                            <option value="3">白羊座</option>
                                            <option value="4">金牛座</option>
                                            <option value="5">双子座</option>
                                            <option value="6">巨蟹座</option>
                                            <option value="7">狮子座</option>
                                            <option value="8">处女座</option>
                                            <option value="9">天秤座</option>
                                            <option value="10">天蝎座</option>
                                            <option value="11">射手座</option>
                                            <option value="12">魔羯座</option>
                                        </select>
             
                                    </div>
                              
                                </div> 
                                <div class="f-box"  >
                                    <label class="f-label">
                                        职业：</label>
                                    <div class="f-input">
                                        <select name="dropPersonalStatus" id="dropPersonalStatus" class="f-txt-b f-txt" style="height: 28px;width:80px;">
                                            <option value="0">请选择</option>
                                            <option value="1">白领</option>
                                            <option value="2">学生</option>
                                        </select>
             
                                    </div>
 
                                </div>
                                <div class="f-box"  >
                                    <label class="f-label">
                                        个性签名：</label>
                                    <div class="f-input">               
                                        <textarea id="txtSingature" name="txtSingature" class="f-txt-b f-txt"
                                                  rows="5" cols="20" style="height:80px;">@Model.Singature</textarea>
             
                                    </div>
                                    <div class="f-msg">
                                        <div id="remarkTip">
                                             
                                        </div>
                                    </div>           
                                </div> 
                                <div class="fb f-act">
                                    <div class="f-input"> 
                                        <input class="btn btn-important-large" style=" line-height: 30px;  background-position: 100% -78px;    padding-right: 10px; font-weight: bold;" type="button" value="确认修改" id="btnUpdatepersonal" onclick="submit();"/> 
                                    </div>
                                    <div class="f-msg">
                                        <div id="divRegTip">
                                        </div>
                                    </div>
                                </div>  
                       

                            </div>
                        }
                    
                    </div>
</div>
        
