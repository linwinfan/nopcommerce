@model List<Maticsoft.Model.Shop.Products.ProductReviews>
<div class="comment">
    <div class="mt">
        热门评论</div>
    <div class="mc">
        @if (Model != null && Model.Count > 0)
        {
            for (int i = 0; i < (Model.Count > 3 ? 3 : Model.Count); i++)
            {
            <dl class="comment@(i+1)">
                <dt><a href="@(ViewBag.BasePath)SNS/User/Posts/@Model[i].UserId">
                    <img src="@("/Upload/User/Gravatar/" + Model[i].UserId + ".jpg?id=" + DateTime.Now)" width="82" height="82"/></a></dt>
                <dd class="commentTitle">
                    <a href="@(ViewBag.BasePath)SNS/User/Posts/@Model[i].UserId">@Model[i].UserName</a></dd>
                <dd class="commentCont">
                    <a href="@(ViewBag.BasePath)Product/Detail/@Model[i].ProductId">@Model[i].ReviewText</a></dd>
            </dl>
            }

        }
    </div>
</div>
